
@{
    ViewBag.Title = "EmailNotificationAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="mainController as main" ng-init="GetEmail()"> 
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Email Account For Notification</h2>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" ng-model="main.Account.Email" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" ng-model="main.Account.Password" />
                </div>

                <div class="form-group">
                    <button type="button" class="btn btn-primary" ng-click="SaveEmail(main.Account)">Save</button>
                    <button type="button" class="btn btn-default">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

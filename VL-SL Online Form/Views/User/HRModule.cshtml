
@{
    ViewBag.Title = "HRModule";
}

<div role="main" ng-controller="hrModuleController as vm" ng-init="Init()">
    <div class="x_content">
        <h3>HR Module</h3>

        <table id="userTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        <button class="btn btn-success btn-xs"><i class="fa fa-plus"></i></button>
                    </th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Department/Position</th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="user in vm.Users | filter {Status: '!X'}">
                    <td>
                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                        <button class="btn btn-danger btn-xs"><i class="fa fa-close"></i></button>
                    </td>
                    <td>{{user.FirstName}} {{user.LastName}}</td>
                    <td>{{user.Username}}</td>
                    <td>{{user.Department}} - {{user.Position}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="userModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">User Account</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" maxlength="150" ng-model="vm.Modal.FirstName" />
                    </div>

                    <div class="form-group">
                        <label>Middle Initial</label>
                        <input type="text" class="form-control" maxlength="10" ng-model="vm.Modal.MiddleInitial" />
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control" maxlength="150" ng-model="vm.Modal.LastName" />
                    </div>

                    <div class="form-group">
                        <label>Department</label>
                        <select class="select2_single form-control" style="width:100%" ng-model="vm.Modal.Department"
                                ng-options="item.value as item.label for item in DepartmentDropdown"></select>
                    </div>

                    <div class="form-group">
                        <label>Position</label>
                        <input type="text" class="form-control" ng-model="vm.Modal.Position"/>
                    </div>

                    <div class="form-group">
                        <label>1st Approver</label>
                    </div>

                    <div class="form-group">
                        <label>2nd Approver</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
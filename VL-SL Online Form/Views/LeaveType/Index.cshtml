
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="leaveTypeController as vm" ng-init="Init()">
    <div class="x_panel">
        <div class="x_title">
            <h2>Leave Type</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="leaveTypeTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width:100px;"></th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Days Before Filling</th>
                    </tr>
                </thead>

                <tbody>

                </tbody>
            </table>
        </div><!--x_content-->
    </div>

    <div class="modal fade" id="leaveTypeModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Leave Type</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Type</label>
                        <select class="select2_single form-control" style="width:100%" ng-model="vm.Modal.Type"
                                ng-options="item.value as item.label for item in LeaveTypeDropDown"></select>

                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="vm.Modal.Description" />

                        <label>Days Befor Filling</label>
                        <input type="number" class="form-control" ng-model="vm.Modal.DaysBeforeFilling" />

                        <button type="button" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="leaveTypeController as vm" ng-init="Init()">
    <div class="x_panel">
        <div class="x_title">
            <h2>Leave Type</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="leaveTypeTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width:100px;"><button class="btn btn-success btn-xs" data-target="#leaveTypeModal" data-toggle="modal">
                            <i class="fa fa-plus"></i></button></th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Days Before Filling</th>
                        <th>Leave Deduction</th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="type in vm.LeaveTypes">
                        <td>
                            <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                            <button class="btn btn-danger btn-xs"  ng-click="SelectToDelete(type)" data-target="#deleteModal"
                                    data-toggle="modal">
                                <i class="fa fa-trash"></i></button>
                        </td>
                        <td>{{type.ShowType}}</td>
                        <td>{{type.Description}}</td>
                        <td>{{type.DaysBeforeFilling}}</td>
                        <td>{{type.LeaveDeduction}}</td>
                    </tr>
                </tbody>
            </table>
        </div><!--x_content-->
    </div>

    <div class="modal fade" id="leaveTypeModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">w
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Leave Type</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Type</label>
                        <select class="form-control select2_single" style="width:100%" ng-model="vm.Modal.Type"
                                ng-options="item.value as item.label for item in LeaveTypeDropDown"></select>                      
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="vm.Modal.Description" />
                    </div>

                    <div class="form-group">
                        <label>Days Befor Filling</label>
                        <input type="number" class="form-control" ng-model="vm.Modal.DaysBeforeFilling" />
                    </div>

                    <div class="form-group">
                        <label>Leave Deduction</label>
                        <input type="number" class="form-control" ng-model="vm.Modal.LeaveDeduction" />
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-primary" ng-click="SaveLeaveType(vm.Modal)">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div><!--./leaveTypeModal-->

    <div class="modal fade" id="deleteModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Are you sure you want to delete?</h4>
                </div>

                <div class="modal-body">
                    <button class="btn btn-warning" ng-click="DeleteLeaveType()">Yes</button>
                    <button class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div><!--./deleteModal-->
</div>

@{
    ViewBag.Title = "GroupApprover";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="groupApproverController as vm" ng-init="InitGroupApprover()">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Group Approver</h2>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <table id="GroupMemberTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width:100px;"></th>
                            <th>Name</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="member in vm.GroupMember | filter: {Status: '!X'}">
                            <td></td>
                            <td>{{member.UserName}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="GroupModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Group Approver</h4>
                </div>
                
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <select class="select2_single form-control" ng-model="vm.SelectedGroup" style="widows:100%"
                                ng-options="item.ID as item.Label for item in vm.GroupApproverDropDown"></select>
                    </div>
                    <button class="btn btn-primary" ng-click="SelectGroup()">Ok</button>
                    <button class="btn btn-default">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div> 